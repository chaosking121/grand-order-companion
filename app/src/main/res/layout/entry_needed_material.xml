<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_height"
    android:background="@color/cardview_light_background">


    <ImageView
        android:id="@+id/needed_material_child_thumbnail"
        android:layout_width="@dimen/material_height"
        android:layout_height="@dimen/material_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/needed_material_child_count"
        android:layout_width="@dimen/material_height"
        android:layout_height="@dimen/material_height"
        android:layout_toEndOf="@id/needed_material_child_thumbnail"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:textColor="@color/cardview_light_background"
            android:textSize="25sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/needed_material_child_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/material_height"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/needed_material_child_count"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="20sp"
        card_view:autoSizeMaxTextSize="25sp"
        card_view:autoSizeMinTextSize="15sp"
        card_view:autoSizeTextType="uniform" />

</LinearLayout>
