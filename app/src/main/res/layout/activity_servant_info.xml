<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android" >

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" >

                <TextView
                    android:id="@+id/servant_info_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="60sp"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/servant_info_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/servant_info_name"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:scaleType="fitStart"
                    android:adjustViewBounds="true" />

                <ImageView
                    android:id="@+id/servant_info_class_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/servant_info_image"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/servant_info_attack_label"
                    android:text="@string/attack_label"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/servant_info_class_image"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/servant_info_attack_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/servant_info_attack_label"
                    android:layout_below="@id/servant_info_class_image"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/servant_info_hp_label"
                    android:text="@string/hp_label"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/servant_info_attack_value"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/servant_info_hp_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/servant_info_hp_label"
                    android:layout_below="@id/servant_info_attack_value"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/servant_info_ascension_materials_label"
                    android:text="@string/ascension_materials_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/servant_info_hp_value"
                    android:textSize="20sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="10sp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/servant_info_ascension_entries"
                    android:layout_below="@id/servant_info_ascension_materials_label"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/servant_info_skill_up_materials_label"
                    android:text="@string/skill_up_materials_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/servant_info_ascension_entries"
                    android:textSize="20sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginBottom="10sp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/servant_info_skill_up_entries"
                    android:layout_below="@id/servant_info_skill_up_materials_label"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="50sp"/>

            </RelativeLayout>
        </ScrollView>
    </LinearLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nvView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/drawer_view"
        app:headerLayout="@layout/nav_header_main">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>